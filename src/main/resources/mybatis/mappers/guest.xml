<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guest">

	<!-- 방명록 불러오기 -->
	<select id="select" resultType="GuestVo">
		<![CDATA[
			select  no
			        , name
			        , password
			        , content
			        , to_char(reg_date, 'YYYY-MM-DD HH:MI:SS') regDate
			from guestbook
			order by no asc
		]]>
	</select>
	
	<!-- 방명록 추가 -->
	<insert id="insert" parameterType="GuestVo">
		<![CDATA[
			insert into guestbook
			values (seq_guestbook_no.nextval, #{name}, #{password}, #{content}, sysdate)
		]]>
	</insert>
	
	<!-- 방명록 삭제 -->
	<delete id="delete" parameterType="GuestVo">
		<![CDATA[
			delete guestbook
			where no = #{no}
			and password = #{password}
		]]>		
	</delete>

</mapper>